package StarbuzzSelf;

public abstract class Beverage {
	String description = "Unknown Beverage";
	public enum Size {
	    SMALL, MEDIUM, LARGE
	}
	public Size size;
	
	public String getDescription() {
		return description;
	}
	
	public void setSize(Size size){
		this.size = size;
	}
	
	public Size getSize(){
		return this.size;
	}
	
	public abstract double cost();
}
